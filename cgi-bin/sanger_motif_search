my $numResults = 0;

my %mappings = (
  B => '[AGS]', # tiny
  b => '[AGS]', # tiny
  Z  => '[ACDEGHKNQRST]', #turnlike
  z  => '[ACDEGHKNQRST]', #turnlike
  0 => '[DE]', #acidic
  1 => '[ST]', #alcohol
  2 => '[AGILV]', #aliphatic
  3 => '[FHWY]', #aromatic
  4 => '[KRH]', #basic
  5 => '[DEHKR]' , #charged
  6 => '[AVILMFYW]' , #hydrophobic
  7 => '[KRHDENQ]' , #hydrophilic
  8 => '[CDEHKNQRST]' , #polar
  9 => '[ACDGNPSTV]', #small
  J => '[ARNDCEQGILKMPSTV]', # All except aromatic, for Hiro Yamano
  j => '[ARNDCEQGILKMPSTV]', # All except aromatic, for Hiro Yamano
  X => '[ARNDCEQGILKMPSTVHF]', # All except WY, for Hiro Yamano
  x => '[ARNDCEQGILKMPSTVHF]', # All except WY, for Hiro Yamano
);

my $GAP_SIZE = 25;

#########
# what stage
