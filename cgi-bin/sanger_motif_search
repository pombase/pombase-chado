if (!$ids_only) {
  print qq(<p><a href="http://www.pombase.org"><img src="http://www.pombase.org/sites/pombase.org/themes/custom/pombase/logo.png"></a></p>\n);
}

$ENV{'PATH'} = "";
$| = 1;
