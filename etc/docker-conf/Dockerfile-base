# -*- dockerfile -*-
# recreate with:
#   docker build -f etc/docker-conf/Dockerfile-base -t=pombase/web-base:v38 .
FROM bitnami/minideb:unstable
LABEL maintainer="Kim Rutherford <kim@pombase.org>"

RUN mkdir /downloads; mkdir /pombase
RUN groupadd -g 1000 pombase && \
  useradd -d /pombase -r -u 1000 -g pombase pombase
RUN chown -R pombase:pombase /pombase

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get -y update && apt-get -y dist-upgrade && apt-get clean
RUN apt-get -y install apt-utils curl && apt-get clean

USER pombase

RUN cd /pombase && curl https://archive.apache.org/dist/lucene/solr/7.1.0/solr-7.1.0.tgz | tar -x --gzip -f - && \
    (cd /pombase/solr-7.1.0/; rm -rf example contrib licenses *.txt docs)

RUN curl https://sh.rustup.rs -sSf | sh -s -- -y --default-toolchain nightly
ENV PATH="/pombase/.cargo/bin/:${PATH}"
RUN rustup default nightly

USER root

RUN apt-get -y install gnupg2 git-core procps xz-utils \
  libterm-readline-gnu-perl pkg-config libssl-dev unzip \
  lsof jq gcc && apt-get clean
RUN apt-get -y install --reinstall python-pkg-resources && apt-get clean
RUN apt-get -y install python3-pip && apt-get clean
RUN echo "deb http://deb.debian.org/debian stable main" >> /etc/apt/sources.list; apt update
RUN apt-get -y install openjdk-8-jre-headless && apt-get clean
RUN apt-get -y install python3-zmq && apt-get clean

RUN curl -sL https://deb.nodesource.com/setup_8.x | bash -
RUN apt-get update && apt-get -y install nodejs npm && apt-get clean
RUN npm install --silent --unsafe-perm -g @angular/cli

RUN apt-get -y install libperlio-gzip-perl libgd-perl libjson-perl pandoc && apt-get clean
RUN curl -L http://cpanmin.us | perl - --self-upgrade
RUN cpanm Pandoc

RUN pip3 install 'tornado<5'; pip3 install circus; pip3 install pipenv
RUN pip3 install django django-allauth gunicorn

USER pombase

ENV JBROWSE_VERSION=1.16.4

RUN (cd /pombase; JBROWSE_TAR=JBrowse-$JBROWSE_VERSION-pombase-2.tar.gz; \
    curl -L https://www.pombase.org/software/$JBROWSE_TAR | tar xzf -; \
    mv JBrowse-$JBROWSE_VERSION-pombase-2 jbrowse; \
    cd /pombase/jbrowse; ./setup.sh)

WORKDIR /pombase

ENV DEBIAN_FRONTEND=interactive
