# -*- dockerfile -*-
# recreate with:
#   docker build -f etc/docker-conf/Dockerfile-base -t=pombase/web-base:v70 .
FROM bitnami/minideb:bullseye

LABEL maintainer="Kim Rutherford <kim@pombase.org>"

RUN mkdir /downloads; mkdir /pombase
RUN groupadd -g 1000 pombase && \
  useradd -d /pombase -r -u 1000 -g pombase pombase
RUN chown -R pombase:pombase /pombase

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get -y update && \
    apt-get -y dist-upgrade && \
    apt-get -y install apt-utils curl gnupg2 git-core procps xz-utils zstd \
        libterm-readline-gnu-perl pkg-config libssl-dev unzip ipip \
        lsof jq gcc net-tools python-pkg-resources python3-pip && \
    echo "deb http://deb.debian.org/debian stable main" >> /etc/apt/sources.list && \
    apt update && apt-get -y install openjdk-11-jre-headless python3-zmq && apt-get clean

RUN apt-get update && apt-get install -y nodejs npm && apt-get clean
RUN npm install --silent --unsafe-perm -g @angular/cli

RUN apt-get -y install libperlio-gzip-perl libgd-perl libjson-perl libtext-csv-perl libyaml-perl pandoc && apt-get clean
RUN curl -L http://cpanmin.us | perl - --self-upgrade

RUN pip3 install --upgrade setuptools; \
    pip3 install --no-cache-dir --upgrade distlib && \
    pip3 install --no-cache-dir 'tornado<5' && pip3 install --no-cache-dir circus pipenv && \
    pip3 install --no-cache-dir django django-allauth gunicorn seaborn numpy matplotlib pandas regex

USER pombase

RUN cd /pombase && curl -L 'https://downloads.apache.org/lucene/solr/8.11.2/solr-8.11.2.tgz' | tar -x --gzip -f - && \
    (cd /pombase/solr-8.11.2/; rm -rf example contrib licenses *.txt docs)

ENV JBROWSE_VERSION=1.16.10-pombase

RUN (cd /pombase; JBROWSE_TAR=JBrowse-$JBROWSE_VERSION-v2.tar.gz; \
    curl -L https://www.pombase.org/software/$JBROWSE_TAR | tar xzf -; \
    mv JBrowse-$JBROWSE_VERSION jbrowse; \
    cd /pombase/jbrowse; ./setup.sh)

USER root

RUN apt remove -y g++ g++-10; apt install -y make; apt autoremove -y

USER pombase

WORKDIR /pombase

ENV DEBIAN_FRONTEND=interactive
